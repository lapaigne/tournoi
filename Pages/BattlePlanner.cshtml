@page
@model Tournoi.Pages.BattlePlannerModel
@{
Layout = "_Layout";
}
<style>
    #battleplanner-container {
        display: flex;
        flex-direction: row;
        gap: 32px;
        align-items: flex-start;
        max-width: 100vw;
        margin: 0 auto 2.5rem auto;
        min-height: 60vh;
        overflow-x: auto;
        box-sizing: border-box;
    }

    .tournament-panel {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        max-width: 340px;
        background: #f6faff;
        border-radius: 10px;
        box-shadow: 0 2px 10px -3px rgba(31, 60, 80, 0.08);
        padding: 2rem 1.5rem 1.2rem 1.5rem;
        box-sizing: border-box;
        border: 1px solid #e3e8ee;
    }

    .tournament-panel h2 {
        margin-bottom: 0.5rem;
        font-size: 1.35rem;
        color: #343a40;
        font-weight: 600;
        text-align: center;
    }

    .tournament-panel .panel-title {
        font-size: 1.08rem;
        font-weight: 500;
        margin-bottom: 0.2rem;
        color: #495057;
        letter-spacing: 0.01em;
    }

    .tournament-panel .players-list {
        padding-left: 1.2em;
        margin-top: 0.8em;
        margin-bottom: 0;
        font-size: 1rem;
        color: #223;
    }

    #battleplanner-table-container {
        flex: 1 1 0;
        min-width: 0;
        max-width: 100%;
        display: flex;
        flex-direction: column;
        background: transparent !important;
        border: none !important;
        box-shadow: none !important;
        padding: 0 !important;
        outline: none !important;
        margin: 0 !important;
    }

    .battle-boxes-wrap {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .battle-box {
        border: none !important;
        background: transparent !important;
        box-shadow: none !important;
        padding: 0 !important;
        margin-bottom: 0;
        min-width: 260px;
        max-width: 380px;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: stretch;
    }

    .battle-box h4 {
        margin-top: 0;
        margin-bottom: 0.8em;
        font-size: 1.13em;
        font-weight: 600;
        text-align: left;
        color: #225;
    }

    .battle-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px -3px rgba(0, 0, 0, 0.07);
        font-size: 1rem;
    }

    .battle-table thead tr {
        background: #f1f3f6;
    }

    .battle-table th,
    .battle-table td {
        padding: 0.7rem 1rem;
        text-align: left;
        border-bottom: 1px solid #e6e6e6;
    }

    .battle-table th {
        font-size: 1.07rem;
        font-weight: 600;
        color: #374151;
        letter-spacing: 0.02em;
    }

    .battle-table tbody tr:last-child td {
        border-bottom: none;
    }

    .battle-table tr:hover td {
        background: #f6fafd;
        transition: background 0.18s;
    }

    .battle-table td {
        color: #333;
    }

    .battle-table td.actions {
        min-width: 120px;
        text-align: center;
    }

    .battle-table button {
        background: #f5f8fa;
        border: 1px solid #cfd8dc;
        color: #2471a3;
        border-radius: 5px;
        padding: 0.3rem 0.95rem;
        margin-right: 0.25rem;
        font-size: 0.98rem;
        cursor: pointer;
        transition: background 0.14s, border 0.14s, color 0.14s;
    }

    .battle-table button:last-child {
        margin-right: 0;
    }

    .battle-table button:hover {
        background: #e3f0fd;
        border-color: #90caf9;
        color: #0d47a1;
    }

    .battle-table .checkmark {
        color: #27ae60;
        font-weight: bold;
        font-size: 1.1em;
    }

    .battle-table .crossmark {
        color: #c0392b;
        font-weight: bold;
        font-size: 1.1em;
    }

    .alert-warning {
        color: #856404;
        background: #fff3cd;
        border: 1px solid #ffeeba;
        border-radius: 4px;
        padding: 1rem;
        margin-bottom: 1rem;
    }
</style>

@if (Model.SelectedPlayers.Count < 7) { <div class="alert-warning">
    Not enough players in the database to make a 7-player scheme.
    </div>
    }
    else
    {
    <div id="battleplanner-container">
        <aside class="tournament-panel">
            <h2>Турнирная схема (7 игроков)</h2>
            <div class="panel-title">Игроки</div>
            <ul class="players-list">
                @foreach (var player in Model.SelectedPlayers)
                {
                <li>@player</li>
                }
            </ul>
        </aside>
        <div id="battleplanner-table-container">
            <div class="battle-boxes-wrap">
                @for (int i = 0; i < 7; i++) { <div class="battle-box">
                    <h4>Бой @(@i + 1)</h4>
                    <table class="battle-table">
                        <thead>
                            <tr>
                                <th style="min-width:180px;width:75%;">Игрок</th>
                                <th style="width:12%;">Счет</th>
                                <th style="width:13%;">Место</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var player in Model.Battles[i])
                            {
                            <tr>
                                <td>@player</td>
                                <td></td>
                                <td></td>
                            </tr>
                            }
                        </tbody>
                    </table>
            </div>
            }
        </div>
    </div>
    </div>
    }
