@model List<PlayerDisplay>

<table>
    <thead>
        <tr>
            <th>Full Name</th>
            <th>City</th>
            <th>Rank</th>
            <th>Sex</th>
            <th>SI</th>
            <th>EQ</th>
            <th>ASI</th>
            <th>PSI</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model)
        {
            <tr id="player-row-@player.Id">
                <td>@player.FullName</td>
                <td>@player.City</td>
                <td>@player.Rank</td>
                <td>@player.Sex</td>
                <td>@(player.SI ? "✔" : "✘")</td>
                <td>@(player.EQ ? "✔" : "✘")</td>
                <td>@(player.ASI ? "✔" : "✘")</td>
                <td>@(player.PSI ? "✔" : "✘")</td>
                <td>
                    <button hx-post="/EditPeople?handler=EditPlayer" 
                            hx-params="id=@player.Id"
                            hx-target="#edit-display-player-form"
                            hx-swap="innerHTML">
                        Edit
                    </button> 
                    <button hx-post="/EditPeople/DeletePlayer"
                            hx-vals="{'id': '@player.Id'}"
                            hx-confirm="Are you sure you want to delete this player?"
                            hx-target="#display-player-@player.Id"
                            hx-swap="outerHTML">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
