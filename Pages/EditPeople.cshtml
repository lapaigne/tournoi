@page
@model EditPeopleModel
@{
Layout = "_Layout";
}

<style>
    #edit-people-container {
        display: flex;
        flex-direction: row;
        gap: 32px;
        align-items: flex-start;
        max-width: 1600px;
        /* Increased width */
        margin: 0 auto 2.5rem auto;
        /* Center and leave space for footer */
        min-height: 70vh;
        overflow-x: auto;
    }

    #edit-display-player-form {
        flex: 0 0 340px;
        min-width: 260px;
        max-width: 400px;
        background: #f8f9fa;
        border-radius: 8px;
        padding: 20px 20px 18px 20px;
        box-shadow: 0 2px 8px -4px rgba(0, 0, 0, 0.06);
        box-sizing: border-box;
    }

    #people-table-container {
        flex: 1 1 900px;
        min-width: 340px;
        max-width: 100%;
        height: 70vh;
        overflow-y: auto;
        background: #fff;
        border: 1px solid #e2e2e2;
        border-radius: 8px;
        padding: 16px 14px;
        box-sizing: border-box;
    }
</style>

<div id="edit-people-container">
    <!-- Panel on the Left -->
    <div id="edit-display-player-form">
        @await Html.PartialAsync("EditPlayerPanel", Model.Player)
    </div>

    <!-- Table on the Right -->
    <div id="people-table-container">
        <div id="people-table">
            @await Html.PartialAsync("_PeopleTable", Model.PlayerDisplays)
        </div>
    </div>
</div>
